<div class="container">
  <h1><%= @product.name %> Details</h1>
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Product Name: <%= @product.name %></h5>
          <p class="card-text"><strong>Description:</strong> <%= @product.description %></p>
          <p class="card-text"><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
          <!-- Add more product details as needed -->
          <%= button_to "Add to Cart", add_to_cart_path(product_id: @product.id), method: :post, remote: true, class: "btn btn-primary", data: { product_id: @product.id } %>
          <!-- Use JavaScript to handle the response and update UI if needed -->
        </div>
      </div>
    </div>
    <div class="col-md-6">

    </div>
  </div>
</div>
