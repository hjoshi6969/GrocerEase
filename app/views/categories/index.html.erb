<div class='container'>
    <h1>All Categories</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td><a href="/Categories/list?id=<%= category.id %>">View Products</a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>