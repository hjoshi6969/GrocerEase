<div class='container'>
    <h1 class="mt-5 mb-4"><%= @category.name %> Products</h1>
    <div class="row">
        <% @products.each do |product| %>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><strong>Price:</strong> <%= number_to_currency(product.price) %></p>
                        <!-- Add more product details as needed -->
                        <div class="mt-auto">
                            <a href="/Products/show?id=<%= product.id %>" class="btn btn-primary btn-block">View Details</a>
                            <button class="btn btn-outline-primary btn-block mt-2">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>